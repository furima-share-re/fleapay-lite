// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Migration management policy:
// - Database is the source of truth
// - Run `prisma db pull` to regenerate this schema after schema changes
// - Do NOT use `prisma migrate`
// - SQL migrations are managed in `supabase/migrations/` directory

// ====== Models ======

model Frame {
  id          String   @id
  displayName String   @map("display_name")
  category    String?
  metadata    Json?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  orders Order[]

  @@map("frames")
}

model Seller {
  id              String   @id
  displayName     String   @map("display_name")
  shopName        String?  @map("shop_name")
  stripeAccountId String?  @map("stripe_account_id")
  email           String?
  passwordHash    String?  @map("password_hash")
  authProvider    String   @default("bcryptjs") @map("auth_provider")
  supabaseUserId  String?  @db.Uuid @map("supabase_user_id")
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  orders         Order[]
  stripePayments StripePayment[]
  qrSessions     QrSession[]
  kidsAchievements KidsAchievement[]
  subscriptions SellerSubscription[]

  @@index([supabaseUserId], name: "sellers_supabase_user_id_idx")
  @@map("sellers")
}

model Order {
  id                      String   @id @default(uuid()) @db.Uuid
  sellerId               String   @map("seller_id")
  orderNo                 Int      @map("order_no")
  amount                  Int
  costAmount              Int      @default(0) @map("cost_amount")
  worldPriceMedian        Int?     @map("world_price_median")
  worldPriceHigh          Int?     @map("world_price_high")
  worldPriceLow           Int?     @map("world_price_low")
  worldPriceSampleCount   Int      @default(0) @map("world_price_sample_count")
  worldPriceRevenueMax    Int?     @map("world_price_revenue_max")
  worldPriceProfitMax     Int?     @map("world_price_profit_max")
  summary                 String?
  frameId                 String?  @map("frame_id")
  status                  String   @default("pending")
  stripeSid               String?  @map("stripe_sid")
  createdAt               DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt               DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt               DateTime? @map("deleted_at") @db.Timestamptz(6)

  frame           Frame?           @relation(fields: [frameId], references: [id])
  seller          Seller          @relation(fields: [sellerId], references: [id])
  orderItems      OrderItem[]
  images          Image[]
  stripePayments  StripePayment[]
  qrSessions      QrSession[]
  buyerAttributes BuyerAttribute?
  orderMetadata   OrderMetadata?

  @@unique([sellerId, orderNo], name: "orders_seller_orderno_unique")
  @@index([sellerId, status], name: "orders_seller_status_idx")
  @@index([createdAt(sort: Desc)], name: "orders_created_idx")
  @@map("orders")
}

model StripePayment {
  id              String   @id @default(uuid()) @db.Uuid
  sellerId        String   @map("seller_id")
  orderId         String?  @map("order_id") @db.Uuid
  paymentIntentId String   @unique @map("payment_intent_id")
  chargeId        String?  @map("charge_id")
  balanceTxId     String?  @map("balance_tx_id")
  amountGross     Int      @map("amount_gross")
  amountFee        Int?     @map("amount_fee")
  amountNet       Int?     @map("amount_net")
  currency        String   @default("jpy")
  status          String
  refundedTotal   Int      @default(0) @map("refunded_total")
  disputeStatus   String? @map("dispute_status")
  rawEvent         Json?   @map("raw_event")
  lastSyncedAt    DateTime @default(now()) @map("last_synced_at") @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  seller Seller  @relation(fields: [sellerId], references: [id])
  order  Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([sellerId], name: "stripe_payments_seller_idx")
  @@index([orderId], name: "stripe_payments_order_idx")
  @@index([status], name: "stripe_payments_status_idx")
  @@index([paymentIntentId], name: "stripe_payments_pi_idx")
  @@map("stripe_payments")
}

model OrderItem {
  id        BigInt   @id @default(autoincrement())
  orderId   String   @map("order_id") @db.Uuid
  name      String
  unitPrice Int      @map("unit_price")
  quantity  Int
  amount    Int
  source    String   @default("ai")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], name: "order_items_order_idx")
  @@map("order_items")
}

model Image {
  id          String   @id @default(uuid()) @db.Uuid
  orderId     String?  @map("order_id") @db.Uuid
  kind        String   @default("processed")
  url         String
  s3Key       String?  @map("s3_key")
  contentType String?  @map("content_type")
  fileSize    Int?     @map("file_size")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  order Order? @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], name: "images_order_idx")
  @@map("images")
}

model QrSession {
  id        String    @id @default(uuid()) @db.Uuid
  sellerId  String    @map("seller_id")
  orderId   String?   @map("order_id") @db.Uuid
  scannedAt DateTime  @default(now()) @map("scanned_at") @db.Timestamptz(6)

  seller Seller @relation(fields: [sellerId], references: [id])
  order  Order? @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([sellerId], name: "qr_sessions_seller_idx")
  @@map("qr_sessions")
}

model BuyerAttribute {
  orderId     String   @id @map("order_id") @db.Uuid
  customerType String  @map("customer_type")
  gender      String
  ageBand     String   @map("age_band")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([customerType], name: "buyer_attributes_customer_type_idx")
  @@map("buyer_attributes")
}

model OrderMetadata {
  orderId      String    @id @map("order_id") @db.Uuid
  category     String?
  buyerLanguage String?  @map("buyer_language")
  isCash       Boolean   @default(false) @map("is_cash")
  paymentState String    @map("payment_state") // 'cash_completed' | 'stripe_pending' | 'stripe_completed'
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], name: "order_metadata_order_idx")
  @@index([isCash], name: "order_metadata_is_cash_idx")
  @@index([paymentState], name: "idx_order_metadata_payment_state")
  @@map("order_metadata")
}

model KidsAchievement {
  sellerId     String
  code          String
  kind          String
  firstEarnedAt DateTime @default(now()) @map("first_earned_at") @db.Timestamptz(6)

  seller Seller @relation(fields: [sellerId], references: [id])

  @@id([sellerId, code])
  @@index([sellerId], name: "kids_achievements_seller_idx")
  @@map("kids_achievements")
}

model SellerSubscription {
  id        String    @id @default(uuid()) @db.Uuid
  sellerId  String    @map("seller_id")
  planType  String    @map("plan_type")
  startedAt DateTime  @default(now()) @map("started_at") @db.Timestamptz(6)
  endedAt   DateTime? @map("ended_at") @db.Timestamptz(6)
  status    String    @default("active")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  seller Seller @relation(fields: [sellerId], references: [id])

  @@index([sellerId], name: "seller_subscriptions_seller_idx")
  @@index([status], name: "seller_subscriptions_status_idx")
  @@index([sellerId, status], name: "seller_subscriptions_seller_status_idx")
  @@map("seller_subscriptions")
}

model FeeRateMaster {
  id              String    @id @default(uuid()) @db.Uuid
  planType        String    @map("plan_type")
  tier            Int?      // Tier番号: 1-5 (NULLの場合は従来のplan_typeベース)
  minTransactions Int?      @map("min_transactions")  // 最小決済回数（月間）
  maxTransactions Int?      @map("max_transactions")  // 最大決済回数（月間、NULL=上限なし）
  feeRate         Decimal   @map("fee_rate") @db.Decimal(5, 4)
  effectiveFrom   DateTime  @default(now()) @map("effective_from") @db.Timestamptz(6)
  effectiveTo     DateTime? @map("effective_to") @db.Timestamptz(6)
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([planType], name: "idx_fee_rate_master_plan_type")
  @@index([planType, effectiveFrom, effectiveTo], name: "idx_fee_rate_master_effective")
  @@index([tier], name: "idx_fee_rate_master_tier")
  @@map("fee_rate_master")
}

model CommunityGoalMaster {
  id            String    @id @default(uuid()) @db.Uuid
  phase         String    // 'phase1', 'phase2', 'phase3'
  targetAmount  Decimal   @map("target_amount") @db.Decimal(12, 0)  // 目標取扱高（円）
  bonusFeeRate  Decimal   @map("bonus_fee_rate") @db.Decimal(5, 4)  // 達成時の手数料率
  normalFeeRate Decimal   @map("normal_fee_rate") @db.Decimal(5, 4)  // 未達成時の手数料率
  effectiveFrom DateTime  @default(now()) @map("effective_from") @db.Timestamptz(6)
  effectiveTo   DateTime? @map("effective_to") @db.Timestamptz(6)
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([phase], name: "idx_community_goal_master_phase")
  @@index([phase, effectiveFrom, effectiveTo], name: "idx_community_goal_master_effective")
  @@map("community_goal_master")
}

model CommunityTransactionVolume {
  id              String    @id @default(uuid()) @db.Uuid
  periodStart     DateTime  @map("period_start") @db.Timestamptz(6)
  periodEnd       DateTime  @map("period_end") @db.Timestamptz(6)
  totalAmount     Decimal   @default(0) @map("total_amount") @db.Decimal(12, 0)  // 総取扱高（円）
  transactionCount BigInt   @default(0) @map("transaction_count")  // 総決済回数
  lastCalculatedAt DateTime @default(now()) @map("last_calculated_at") @db.Timestamptz(6)
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([periodStart, periodEnd], name: "idx_community_transaction_volume_period")
  @@map("community_transaction_volume")
}

model SellerMonthlyStat {
  id               String   @id @default(uuid()) @db.Uuid
  sellerId         String   @map("seller_id")
  yearMonth        String   @map("year_month")
  transactionCount Int      @default(0) @map("transaction_count")
  startTier        Int      @default(1) @map("start_tier")
  currentTier      Int      @default(1) @map("current_tier")
  createdAt        DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@unique([sellerId, yearMonth], name: "idx_seller_monthly_stats_unique")
  @@index([sellerId], name: "idx_seller_monthly_stats_seller")
  @@map("seller_monthly_stats")
}

model BenchmarkData {
  id              String   @id @default(uuid()) @db.Uuid
  benchmarkType   String   @map("benchmark_type")
  contentCategory String?  @map("content_category")
  weekStartDate   DateTime @map("week_start_date") @db.Date
  industryStandard Decimal? @map("industry_standard")
  edoIchibaCurrent Decimal? @map("edo_ichiba_current")
  edoIchibaTarget Decimal? @map("edo_ichiba_target")
  actualValue     Decimal? @map("actual_value")
  growthRate      Decimal? @map("growth_rate")
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  createdBy       String?  @map("created_by")

  @@unique([benchmarkType, contentCategory, weekStartDate], name: "benchmark_data_benchmark_type_content_category_week_start_d_key")
  @@index([benchmarkType], name: "idx_benchmark_data_type")
  @@index([weekStartDate(sort: Desc)], name: "idx_benchmark_data_week")
  @@map("benchmark_data")
}

model GoalAchievement {
  id              String   @id @default(uuid()) @db.Uuid
  phase           String
  metricType      String   @map("metric_type")
  weekStartDate   DateTime @map("week_start_date") @db.Date
  targetValue     Decimal? @map("target_value")
  actualValue     Decimal? @map("actual_value")
  achievementRate Decimal? @map("achievement_rate")
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  createdBy       String?  @map("created_by")

  @@unique([phase, metricType, weekStartDate], name: "goal_achievements_phase_metric_type_week_start_date_key")
  @@index([phase], name: "idx_goal_achievements_phase")
  @@index([metricType], name: "idx_goal_achievements_type")
  @@index([weekStartDate(sort: Desc)], name: "idx_goal_achievements_week")
  @@map("goal_achievements")
}

model KpiMetric {
  id             String   @id @default(uuid()) @db.Uuid
  metricKey      String   @map("metric_key")
  metricCategory String   @map("metric_category")
  weekStartDate  DateTime @map("week_start_date") @db.Date
  targetValue    Decimal? @map("target_value")
  actualValue    Decimal? @map("actual_value")
  unit           String?
  phase          String?
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  createdBy      String?  @map("created_by")

  @@unique([metricKey, weekStartDate], name: "kpi_metrics_metric_key_week_start_date_key")
  @@index([metricCategory], name: "idx_kpi_metrics_category")
  @@index([metricKey], name: "idx_kpi_metrics_key")
  @@index([weekStartDate(sort: Desc)], name: "idx_kpi_metrics_week")
  @@map("kpi_metrics")
}