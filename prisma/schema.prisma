generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Migration management policy:
// - Database is the source of truth
// - Run `prisma db pull` to regenerate this schema after schema changes
// - Do NOT use `prisma migrate`
// - SQL migrations are managed in `supabase/migrations/` directory

// ====== Models ======

model Frame {
  id          String   @id
  displayName String   @map("display_name")
  category    String?
  metadata    Json?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  orders Order[]

  @@map("frames")
}

model Seller {
  id              String   @id
  displayName     String   @map("display_name")
  shopName        String?  @map("shop_name")
  stripeAccountId String?  @map("stripe_account_id")
  email           String?
  passwordHash    String?  @map("password_hash")
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  orders         Order[]
  stripePayments StripePayment[]
  qrSessions     QrSession[]
  kidsAchievements KidsAchievement[]

  @@map("sellers")
}

model Order {
  id                      String   @id @default(uuid()) @db.Uuid
  sellerId               String   @map("seller_id")
  orderNo                 Int      @map("order_no")
  amount                  Int
  costAmount              Int      @default(0) @map("cost_amount")
  worldPriceMedian        Int?     @map("world_price_median")
  worldPriceHigh          Int?     @map("world_price_high")
  worldPriceLow           Int?     @map("world_price_low")
  worldPriceSampleCount   Int      @default(0) @map("world_price_sample_count")
  worldPriceRevenueMax    Int?     @map("world_price_revenue_max")
  worldPriceProfitMax     Int?     @map("world_price_profit_max")
  summary                 String?
  frameId                 String?  @map("frame_id")
  status                  String   @default("pending")
  stripeSid               String?  @map("stripe_sid")
  createdAt               DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt               DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt               DateTime? @map("deleted_at") @db.Timestamptz(6)

  frame           Frame?           @relation(fields: [frameId], references: [id])
  seller          Seller          @relation(fields: [sellerId], references: [id])
  orderItems      OrderItem[]
  images          Image[]
  stripePayments  StripePayment[]
  qrSessions      QrSession[]
  buyerAttributes BuyerAttribute?
  orderMetadata   OrderMetadata?

  @@unique([sellerId, orderNo], name: "orders_seller_orderno_unique")
  @@index([sellerId, status], name: "orders_seller_status_idx")
  @@index([createdAt(sort: Desc)], name: "orders_created_idx")
  @@map("orders")
}

model StripePayment {
  id              String   @id @default(uuid()) @db.Uuid
  sellerId        String   @map("seller_id")
  orderId         String?  @map("order_id") @db.Uuid
  paymentIntentId String   @unique @map("payment_intent_id")
  chargeId        String?  @map("charge_id")
  balanceTxId     String?  @map("balance_tx_id")
  amountGross     Int      @map("amount_gross")
  amountFee        Int?     @map("amount_fee")
  amountNet       Int?     @map("amount_net")
  currency        String   @default("jpy")
  status          String
  refundedTotal   Int      @default(0) @map("refunded_total")
  disputeStatus   String? @map("dispute_status")
  rawEvent         Json?   @map("raw_event")
  lastSyncedAt    DateTime @default(now()) @map("last_synced_at") @db.Timestamptz(6)
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  seller Seller  @relation(fields: [sellerId], references: [id])
  order  Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([sellerId], name: "stripe_payments_seller_idx")
  @@index([orderId], name: "stripe_payments_order_idx")
  @@index([status], name: "stripe_payments_status_idx")
  @@index([paymentIntentId], name: "stripe_payments_pi_idx")
  @@map("stripe_payments")
}

model OrderItem {
  id        BigInt   @id @default(autoincrement())
  orderId   String   @map("order_id") @db.Uuid
  name      String
  unitPrice Int      @map("unit_price")
  quantity  Int
  amount    Int
  source    String   @default("ai")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], name: "order_items_order_idx")
  @@map("order_items")
}

model Image {
  id          String   @id @default(uuid()) @db.Uuid
  orderId     String?  @map("order_id") @db.Uuid
  kind        String   @default("processed")
  url         String
  s3Key       String?  @map("s3_key")
  contentType String?  @map("content_type")
  fileSize    Int?     @map("file_size")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  order Order? @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], name: "images_order_idx")
  @@map("images")
}

model QrSession {
  id        String    @id @default(uuid()) @db.Uuid
  sellerId  String    @map("seller_id")
  orderId   String?   @map("order_id") @db.Uuid
  scannedAt DateTime  @default(now()) @map("scanned_at") @db.Timestamptz(6)

  seller Seller @relation(fields: [sellerId], references: [id])
  order  Order? @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([sellerId], name: "qr_sessions_seller_idx")
  @@map("qr_sessions")
}

model BuyerAttribute {
  orderId     String   @id @map("order_id") @db.Uuid
  customerType String  @map("customer_type")
  gender      String
  ageBand     String   @map("age_band")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([customerType], name: "buyer_attributes_customer_type_idx")
  @@map("buyer_attributes")
}

model OrderMetadata {
  orderId      String    @id @map("order_id") @db.Uuid
  category     String?
  buyerLanguage String?  @map("buyer_language")
  isCash       Boolean   @default(false) @map("is_cash")
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], name: "order_metadata_order_idx")
  @@index([isCash], name: "order_metadata_is_cash_idx")
  @@map("order_metadata")
}

model KidsAchievement {
  sellerId     String
  code          String
  kind          String
  firstEarnedAt DateTime @default(now()) @map("first_earned_at") @db.Timestamptz(6)

  seller Seller @relation(fields: [sellerId], references: [id])

  @@id([sellerId, code])
  @@index([sellerId], name: "kids_achievements_seller_idx")
  @@map("kids_achievements")
}
